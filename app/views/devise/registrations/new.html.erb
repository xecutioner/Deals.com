<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p class = 'devise-inputs'><%= f.label :username %>
  <%= f.text_field :username %></p>


  <p class = 'devise-inputs'><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p class = 'devise-inputs'><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>

  <p class = 'devise-inputs'><%= f.label :fullname %>
  <%= f.text_field :fullname %></p>

  <p class = 'devise-inputs'><%= f.label :phonenumber %>
  <%= f.text_field :phonenumber %></p>

  <p class = 'devise-inputs'><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p class = 'devise-inputs'><%= f.check_box :notify %>
    <%= f.label "Notify me about latest deals" %></p>

  <p class = 'devise-inputs'><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>

